<h1>Listing payments</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Month</th>
      <th>Currency</th>
      <th>Payment type</th>
      <th>Payment method</th>
      <th>Comment</th>
      <th>Library member</th>
      <th>Bicycle member</th>
      <th>Gym member</th>
      <th>Parking motorbike</th>
      <th>Parking car</th>
      <th>Buddhist</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.month %></td>
        <td><%= payment.currency %></td>
        <td><%= payment.payment_type %></td>
        <td><%= payment.payment_method %></td>
        <td><%= payment.comment %></td>
        <td><%= payment.library_member %></td>
        <td><%= payment.bicycle_member %></td>
        <td><%= payment.gym_member %></td>
        <td><%= payment.parking_motorbike %></td>
        <td><%= payment.parking_car %></td>
        <td><%= payment.buddhist %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

