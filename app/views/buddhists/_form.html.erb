<%= form_for @buddhist, html: {role: "form", class: "form"} do |f| %>
  <% if @buddhist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@buddhist.errors.count, "error") %> prohibited this buddhist from being saved:</h2>

      <ul>
        <% @buddhist.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- widget div-->
  <div>

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
      <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->

    <!-- widget content -->
    <div class="widget-body no-padding">

      <form id="smart-form-register" class="smart-form">
        <header>
          New Buddhist Registration
        </header>

        <fieldset>
          <section>
            <label class="input"> <i class="icon-append fa fa-user"></i>
              <%= f.text_field :name, class: 'form-control' %>
              <b class="tooltip tooltip-bottom-right">Name</b> </label>
          </section>


          <section>
            <label class="input"> <i class="icon-append fa fa-envelope-o"></i>
              <%= f.text_field :email, class: 'form-control' %>
              <b class="tooltip tooltip-bottom-right">Needed to verify your account</b> </label>
          </section>

          <section>
            <label class="input"> <i class="icon-append fa fa-lock"></i>
              <%= f.number_field :buzzer_id, class: 'form-control' %>
              <b class="tooltip tooltip-bottom-right">Your buzzer id</b> </label>
          </section>

          <section>
            <label class="input"> <i class="icon-append fa fa-lock"></i>
              <%= f.text_field :telephone_number, class: 'form-control' %>
              <b class="tooltip tooltip-bottom-right">Don't forget your telephone number</b> </label>
          </section>
        </fieldset>

        <fieldset>
          <div class="row">
            <section class="col col-6">
              <label class="input">
                <%= f.text_field :address, class: 'form-control' %>
              </label>
            </section>
            <section class="col col-6">
              <label class="input">
                <%= f.text_field :local_center, class: 'form-control' %>
              </label>
            </section>
          </div>

          <div class="row">
            <section class="col col-6">
              <label class="select">
                <%= f.select(:status, options_for_select([['Tag', 'member'], ['Pártoló', 'supporter'], ['Inaktív', 'inactive']]), {}, {:class => 'form-control'}) %>
                <i></i> </label>
            </section>
          </div>

          <section>
            <label><%= f.check_box :program_sms %></label>
          </section>
        </fieldset>
        <footer>
          <%= f.submit(class: 'btn btn-medium btn-success') %>
        </footer>
      </form>

    </div>
    <!-- end widget content -->

  </div>
  <!-- end widget div -->
<% end %>
